  "main": "server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon -r tsconfig-paths/register --exec ts-node ./src/server.ts --files",
    "start": "cross-env NODE_ENV=production node ./build/src/server.js",
    "build": "tsc && tsc-alias",
    "lint": "eslint ./src/**/*.ts --fix",
    "format": "prettier --write ./**/*.{ts,json}",
    "test": "jest --coverage=true -w=1 --forceExit --detectOpenHandles --watchAll=false --testPathPattern=src/__tests__ --testPathIgnorePatterns=build",
    "generate-keys": "mkdir keys && openssl genpkey -algorithm RSA -out keys/private.pem -pkeyopt rsa_keygen_bits:2048",
    "generate-hmac": "node ./scripts/generateHMACSecret.js",
    "docker:dev": "docker compose build && docker run --env-file .env.docker mileto-api",
    "docker:dev:nocache": "docker compose build --no-cache && docker compose up --env-file .env.docker"
  },
